#include<iostream>
#include<limits.h>
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
	int n;
	cin>>n;
	int a[n];
	int max=INT_MIN;
	int vitri;
	int check=0;
	for(int i=0;i<n;i++){
		cin>>a[i];
		if(a[i]>max){
			max=a[i];
			vitri=i+1;
		}
	}
	for(int i=0;i<n;i++){
		if(a[i]==max&&i%2==0){
			check=1;
		}
	}
	if(check==1){
		vitri=1;
	}
	if(n%2==0){
		cout<<max+n/2<<endl;
	}else{
		if(vitri%2==0){
			cout<<max+n/2<<endl;
		}else{
			cout<<max+n/2+1<<endl;
		}
	}
}
}
